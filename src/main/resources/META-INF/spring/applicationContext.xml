<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <import resource="classpath:applicationPlatformServerAPI.xml"/>
    <import resource="classpath:applicationPillReminderAPI.xml"/>
    <import resource="classpath:inboundEventChannelAdapter.xml"/>

    <context:property-placeholder location="classpath*:META-INF/spring/*.properties"/>
    <util:properties id="couchdbProperties" location="classpath:/couchdb.properties"/>
    <util:properties id="ivrProperties" location="classpath:/ivr.properties"/>
    <context:spring-configured/>

    <context:component-scan base-package="org.motechproject.tama">
        <context:exclude-filter expression=".*_Roo_.*" type="regex"/>
        <context:exclude-filter expression="org.springframework.stereotype.Controller" type="annotation"/>
    </context:component-scan>

    <bean id="encryptor" class="org.jasypt.encryption.pbe.StandardPBEStringEncryptor" lazy-init="false">
        <property name="algorithm" value="PBEWithMD5AndDES"/>
        <property name="password" value="jasypt"/>
    </bean>
    <bean id="tamaCouchDbInstance" class="org.ektorp.impl.StdCouchDbInstance">
        <constructor-arg>
            <bean id="httpClient" class="org.ektorp.spring.HttpClientFactoryBean"/>
        </constructor-arg>
    </bean>
    <bean id="tamaDbConnector" class="org.ektorp.impl.StdCouchDbConnector">
        <constructor-arg value="tama-web"/>
        <constructor-arg ref="tamaCouchDbInstance"/>
    </bean>
    <bean id="actions" class="org.motechproject.tama.ivr.action.Actions">
        <constructor-arg>
            <map>
                <entry key="newcall" value-ref="newCallEventAction"/>
                <entry key="record" value-ref="recordEventAction"/>
                <entry key="gotdtmf" value-ref="dtmfEventAction"/>
                <entry key="disconnect" value-ref="disconnectEventAction"/>
                <entry key="hangup" value-ref="hangupEventAction"/>
            </map>
        </constructor-arg>
    </bean>

</beans>
