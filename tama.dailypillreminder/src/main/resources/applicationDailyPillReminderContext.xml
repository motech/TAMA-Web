<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <import resource="classpath:applicationCommonContext.xml"/>
    <import resource="classpath:applicationIVRContext.xml"/>
    <import resource="classpath:applicationOutboxContext.xml"/>
    <context:component-scan base-package="org.motechproject.tama.dailypillreminder"/>

    <util:properties id="dailyPillReminderProperties" location="classpath:/dailypillreminder.properties"/>
    <context:property-placeholder location="classpath*:/*.properties" ignore-unresolvable="true"/>
    <context:annotation-config/>
    <context:spring-configured/>
</beans>
