<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    <context:spring-configured/>
    <context:component-scan base-package="org.motechproject.tamatools*"/>
    <context:component-scan base-package="org.motechproject.tamadomain*"/>
    <context:component-scan base-package="org.motechproject.tamacommon*"/>

    <context:component-scan base-package="org.motechproject.server.alerts.service"/>
    <context:component-scan base-package="org.motechproject.tamacallflow.platform.service">
        <context:include-filter type="regex" expression=".*TamaSchedulerService"/>
    </context:component-scan>
    <context:component-scan base-package="org.motechproject.tamacallflow.service">
        <context:include-filter type="regex" expression="org.motechproject.tama.service.PatientAlertService"/>
        <context:exclude-filter type="regex" expression="org.motechproject.tama.service.SymptomReportingTreeService"/>
    </context:component-scan>
    <import resource="classpath:applicationContext-TAMACallFlow.xml"/>

    <bean id="seedLoader" class="org.motechproject.tama.refdata.SeedLoader">
        <constructor-arg>
            <list>
                <ref bean="mealAdviceTypeSeed"/>
                <ref bean="genderSeed"/>
                <ref bean="modeOfTransmissionSeed"/>
                <ref bean="HIVTestReasonSeed"/>
                <ref bean="IVRLanguageSeed"/>
                <ref bean="dosageTypeSeed"/>
                <ref bean="companySeed"/>
                <ref bean="drugSeed"/>
                <ref bean="regimenSeed"/>
                <ref bean="citySeed"/>
                <ref bean="administratorSeed"/>
                <ref bean="labTestSeed"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="audioSeedLoader" class="org.motechproject.tama.refdata.SeedLoader">
        <constructor-arg>
            <list>
                <ref bean="audioSeed"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="couchDB" class="org.motechproject.tamatools.tools.CouchDB"/>
</beans>
