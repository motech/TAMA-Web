                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.9</version>
                <configuration>
                    <argLine>-XX:MaxPermSize=1024M -ea</argLine>
                    <printSummary>true</printSummary>
                    <includes>
                        <include>**/tama/**/*Test.java</include>
                        <include>**/*IT.java</include>
                    </includes>
                    <excludes>
                        <exclude>**/*_Roo_*</exclude>
                        <exclude>**/tamafunctional/**/*.java</exclude>
                        <exclude>**/tamaperformance/**/*.java</exclude>
                    </excludes>
                </configuration>
            </plugin>

            <!--Functional tests-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.9</version>
                <executions>
                    <execution>
                        <id>serial-func-tests</id>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                        <configuration>
                            <argLine>-XX:MaxPermSize=1024M</argLine>
                            <systemProperties>
                                <property>
                                    <name>jetty.port</name>
                                    <value>${jetty.port}</value>
                                </property>
                                <property>
                                    <name>test.driver</name>
                                    <value>${test.driver}</value>
                                </property>
                            </systemProperties>
                            <runOrder>reversealphabetical</runOrder>
                            <includes>
                                <include>**/tamafunctional/**/serial/*Test.java</include>
                            </includes>
                            <redirectTestOutputToFile>true</redirectTestOutputToFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>parallel-func-tests</id>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                        <configuration>
                            <argLine>-XX:MaxPermSize=1024M</argLine>
                            <systemProperties>
                                <property>
                                    <name>jetty.port</name>
                                    <value>${jetty.port}</value>
                                </property>
                                <property>
                                    <name>test.driver</name>
                                    <value>${test.driver}</value>
                                </property>
                            </systemProperties>
                            <runOrder>reversealphabetical</runOrder>
                            <parallel>classes</parallel>
                            <threadCount>4</threadCount>
                            <perCoreThreadCount>false</perCoreThreadCount>
                            <includes>
                                <include>**/tamafunctional/**/*Test.java</include>
                            </includes>
                            <excludes>
                                <exclude>**/tamafunctional/**/serial/*Test.java</exclude>
                            </excludes>
                            <redirectTestOutputToFile>true</redirectTestOutputToFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>7.3.0.v20110203</version>
                <configuration>
                    <systemProperties>
