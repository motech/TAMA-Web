<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    <context:spring-configured/>
    <context:component-scan base-package="org.motechproject.tama.tools"/>
    <import resource="classpath:applicationDailyPillReminderContext.xml"/>
    <import resource="classpath:applicationFourDayRecallContext.xml"/>
    <import resource="classpath:applicationSymptomReportingContext.xml"/>

    <context:component-scan base-package="org.motechproject.tama.ivr.decisiontree.service">
        <context:exclude-filter type="regex" expression=".*SymptomReportingTreeService"/>
    </context:component-scan>

    <bean id="seedLoader" class="org.motechproject.tama.tools.seed.SeedLoader">
        <constructor-arg>
            <list>
                <ref bean="mealAdviceTypeSeed"/>
                <ref bean="genderSeed"/>
                <ref bean="modeOfTransmissionSeed"/>
                <ref bean="HIVTestReasonSeed"/>
                <ref bean="IVRLanguageSeed"/>
                <ref bean="dosageTypeSeed"/>
                <ref bean="companySeed"/>
                <ref bean="drugSeed"/>
                <ref bean="regimenSeed"/>
                <ref bean="citySeed"/>
                <ref bean="administratorSeed"/>
                <ref bean="labTestSeed"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="audioSeedLoader" class="org.motechproject.tama.tools.seed.SeedLoader">
        <constructor-arg>
            <list>
                <ref bean="audioSeed"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="couchDB" class="org.motechproject.tama.tools.CouchDB"/>
</beans>
