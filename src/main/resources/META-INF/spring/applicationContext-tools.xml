<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <import resource="classpath*:META-INF/spring/applicationContext.xml"/>

	<bean id="seedLoader" class="org.motechproject.tama.tools.seed.SeedLoader">
		<constructor-arg>
			<list>
				<ref bean="mealAdviceSeed"/>
				<ref bean="genderSeed"/>
				<ref bean="ivrLanguageSeed"/>
				<ref bean="dosageTypeSeed"/>
				<ref bean="companySeed"/>
				<ref bean="drugSeed"/>
				<ref bean="regimenSeed"/>
			</list>
		</constructor-arg>
	</bean>

	<bean id="mealAdviceSeed" class="org.motechproject.tama.tools.seed.MealAdviceTypeSeed" />
	<bean id="genderSeed" class="org.motechproject.tama.tools.seed.GenderSeed" />
	<bean id="ivrLanguageSeed" class="org.motechproject.tama.tools.seed.IVRLanguageSeed" />
	<bean id="dosageTypeSeed" class="org.motechproject.tama.tools.seed.DosageTypeSeed" />
	<bean id="companySeed" class="org.motechproject.tama.tools.seed.CompanySeed" />
	<bean id="drugSeed" class="org.motechproject.tama.tools.seed.DrugSeed" />
	<bean id="regimenSeed" class="org.motechproject.tama.tools.seed.RegimenSeed" />

    <bean id="couchDB" class="org.motechproject.tama.tools.CouchDB"/>
</beans>
